<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:background="#fff"
    tools:context="com.example.mosaic.forrent.ItemListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/booker_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#222222"
            android:fontFamily="sans-serif"
            android:layout_alignTop="@+id/booker_avatar"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="1dp"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:paddingLeft="8dp"
            android:inputType="textMultiLine"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            android:text=""
            android:textSize="14sp"
            />




        <TextView
            android:id="@+id/booker_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/booker_tv"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:layout_toRightOf="@+id/booker_contact_icon"
            android:layout_toEndOf="@+id/booker_contact_icon"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:inputType="textMultiLine"
            android:paddingBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:text=""
            android:textSize="12sp"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/storytv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/booker_tv"
            android:gravity="left"
            android:visibility="gone"
            android:padding="10dp"
            android:shadowColor="#666"
            android:text=""
            android:textColor="#666"
            android:textSize="18sp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/book_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/booker_tv"
            android:gravity="right"
            android:padding="10dp"
            android:shadowColor="@color/colorAccent"
            android:text="more"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />


    </LinearLayout>

</android.support.v7.widget.CardView>